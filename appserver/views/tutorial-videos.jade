doctype html
html
  head
    title Tutorial Videos
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')

  body
    include layout.jade

    // Navbar
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Hobbyist Community 
        #navbar-main.navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/discussion-forums') Discussion Forums
            li
              a(href='/tutorial-videos') Tutorial Videos
            li
              a(href='/events') Events
            li
              a(href='/polls-surveys') Polls & Surveys

    // Main Content
    .container(style='padding-top: 80px')
      .row
        .col-md-12
          h1 Tutorial Videos
          p Explore the different tutorial videos below:

          // Category 1
          h2(style='margin-top: 40px') Basic Tutorials
          .row
            .col-md-4
              .video-container
                video(controls, width="100%", height="auto")
                  source(src='/videos/basic1.mp4', type='video/mp4')
                  source(src='/videos/basic1.webm', type='video/webm')
                  p Your browser does not support the video tag.
              p.video-description Basic Tutorial 1
