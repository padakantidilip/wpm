// events.jade
doctype html
html
  head
    title Events
    //- meta(charset='UTF-8')
    //- meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')

  body
    include layout.jade
    .container(style='padding-top: 80px')
      .row
        .col-md-12
          h1 Events
          p Here are the upcoming events. Join us for these exciting gatherings!

          .event-list
            each event in events
              .event-card.row(style='margin-bottom: 20px; border: 1px solid #ddd; padding: 15px; border-radius: 5px')
                .col-md-4
                  h3= event.name
                  p.date.text-muted
                    span Date: 
                    span= event.date
                  p.location.text-muted
                    span Location: 
                    span= event.location
                .col-md-8
                  p.description= event.description

    .additional-info(style="margin-top: 50px; text-align: center;")
      h2 Share Your Thoughts!
      p We value your feedback. Let us know what you think about our website and services.
      form(action='/feedback', method='POST')
        input(type='text', placeholder='Your feedback', required)
        button.btn.btn-success(type='submit') Submit Feedback

    // Footer
    footer(style="margin-top: 50px; text-align: center;")
      p &copy; 2024 Hobbyist Community. All rights reserved.
      a(href='/about') Learn More About Us